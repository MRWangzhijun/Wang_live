<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.wzj.live.activity.MainActivity">
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>


    <RadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#D1EEEE"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/home"
            android:checked="true"
            android:drawableTop="@drawable/radio_home"
            android:button="@null"
            android:layout_gravity="center"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/my"
            android:text="我的"
            android:button="@null"
            android:drawableTop="@drawable/radio_my"
            android:layout_gravity="center"
            />

    </RadioGroup>


    <ImageView
        android:id="@+id/menu_img"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:src="@drawable/radio_menu"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_below="@id/radioGroup">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/shortvideo_main_live"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/shortvideo_main_video"
            android:id="@+id/imageView" />


    </LinearLayout>

</RelativeLayout>
