<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressTextView">
        <attr name="ptv_textColor" format="color"/>
        <attr name="ptv_thumHeight" format="dimension"/>
        <attr name="ptv_textSize" format="dimension"/>
        <attr name="ptv_thumWidth" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <!-- 圆形头像 -->
    <declare-styleable name="CustomRoundView">
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
    </declare-styleable>
</resources>
